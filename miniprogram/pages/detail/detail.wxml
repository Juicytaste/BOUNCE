<view class="top">
    <image src="{{imgurl}}" class="img" mode="scaleToFill"></image>
    <view class="top_right">
        <view class="name">{{name}}</view>
        <view class="price">￥{{price}}</view>
        <view class="onsale">售票中</view>
        <view class="onsale" style="font-size: 25rpx;"><text style="font-size: 30rpx;">艺人：</text>{{artist}}</view>
    </view>
    <button class="collect {{color?'grey':'black'}}" style="width: 45%;" bindtap="change">{{color?'已加入我的想看':'加入我的想看'}}</button>
</view>
<view class="place">
    <view>时间：{{time}}</view>
    <view>地点：{{city}}</view>
</view>
<view class="passage">
<image mode="scaleToFill" src="https://s1.328888.xyz/2022/09/02/k61go.png"></image>
</view>
<view class="foot">
    <button class="gotobuy" style="width: 80%;" bindtap="GTB">前往购票</button>
</view>
<view class="pop" style="display: {{display}};">
    <view class="word_1">前往购票平台（点击复制链接）</view>
    <image class="cross" src="https://s3.bmp.ovh/imgs/2022/04/15/eccc896397592b97.png" bindtap="close"></image>
    <button class="dm" style="width: 88%; display: {{mddp}};" bindtap="handleClickmd">摩登</button>
    <button class="dm" style="width: 88%; display: {{xddp}};" bindtap="handleClickxd">秀动</button>
    <button class="dm" style="width: 88%; display: {{dmdp}};" bindtap="handleClickdm">大麦</button>
</view>
