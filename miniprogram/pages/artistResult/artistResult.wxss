/* miniprogram-bounce/pages/artistResult/artistResult.wxss */
.hmly-content-list {
	width: 90%;
	margin: 0rpx auto;
	margin-top: 10rpx;
}

.hmly-content {
	width: 100%;
	height: auto;
	padding: 20rpx 0rpx;
	display: flex;
	justify-content: space-between;
	border-bottom: 1rpx solid #f1f1f1;
}

.hmly-content-img {
	width: 300rpx;
	height: 250rpx;
	border-radius: 25rpx;
}

.hmly-content-img>image {
	width: 100%;
	height: 100%;
	border-radius: 15rpx;
}

.hmly-content-right {
	width: 530rpx;
    height: 100%;
	display: flex;
	flex-direction: column;
}
.artist{
    font-size: 40rpx;
    font-weight: 600;
	margin-left: 20rpx;
}
.style{
    margin-top: 35rpx;
    margin-left: 20rpx;
}
.content{
    margin-left: 20rpx;
    margin-top: 5rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    align-content: center;
}