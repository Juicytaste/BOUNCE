.hmly-search {
	width: 90%;
	height: auto;
    display: flex;
	align-items: center;
	margin: 0rpx auto;
}
.hmly-search-left {
	margin-top: 10rpx;
	flex: 4;
	background-color: rgb(230, 230, 230);
	display: flex;
	justify-content: flex-start;
	align-items: center;
	padding: 10rpx 20rpx;
	border-radius: 30rpx;
}

.hmly-search input {
	width: 90%;
	height: 100%;
	font-size: 28rpx;
	margin-left: 20rpx;
}

.hmly-search-right {
	padding: 10rpx 30rpx;
	border-radius: 15rpx;
	flex: 0.5;
	font-size: 28rpx;
	color: #ffffff;
	background-color: #3399ff;
	text-align: center;
	margin-top: 10rpx;
	margin-left: 30rpx;
}
.hmly-title-left{
    color: #000;
    font-size: 35rpx;
	font-weight: 600;
}
.artist_dongtai {
    color: #000;
    font-size: 35rpx;
    font-weight: 600;
    width: 90%;
	margin: 0rpx auto;
	margin-top: 40rpx;
}

.hmly-like {
	width: 90%;
	margin: 0rpx auto;
	margin-top: 40rpx;
}

.hmly-like-item-box {
    width: 100%;
	justify-content: space-between;
	overflow: hidden;
}

.hmly-like-item {
    margin-right: 20rpx;
	width: 210rpx;
	height: 280rpx;
}

.hmly-like-img {
    margin-top: 50rpx;
    margin-left: auto;
    margin-right: auto;
	width: 160rpx;
	height: 160rpx;
}

.hmly-like-item-icon {
    border: 4px solid transparent;
    border-radius: 16px;
    background-clip: padding-box, border-box;
    background-origin: padding-box, border-box;
    background-image: linear-gradient(to right, #222, #222), linear-gradient(90deg, #8F41E9, #578AEF);
	width: 100%;
	height: 100%;
	border-radius: 50%;
}

.hmly-like-text {
    text-align: center;
    font-size: 28rpx;
    font-weight: 600;
	color: #333;
    margin-top: 30rpx;
    margin-left: 10rpx;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	overflow: hidden;
	text-overflow: ellipsis;
}

.hmly-like-cover {
	width: 190rpx;
	height: 40rpx;
	background-image: linear-gradient(rgba(0, 0, 0, 0.01), rgba(0, 255, 255, 1));
	position: absolute;
	bottom: 0rpx;
	color: #fff;
	font-size: 25rpx;
	padding: 5rpx 10rpx;
	border-bottom-left-radius: 15rpx;
	border-bottom-right-radius: 15rpx;
}
.followitem{
    margin-bottom: 30rpx;
}
.artist{
    float: left;
    font-size: 35rpx;
    font-weight: 700;
    margin-left: 25rpx;
}
.profilepic{
    float: left;
    width: 120rpx;
    height: 120rpx;
    border-radius: 20rpx;
}
.content{
    height: 1200rpx;
    width: 100%;
    margin-bottom: 30rpx;
    border-bottom: solid 1rpx;
}
.title{
    float: left;
    margin-left: 30rpx;
    margin-top: 20rpx;
    line-height: 45rpx;
    font-weight: 600;
    width: 70%;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    align-content: center;
}
.image{
    float: right;
    width: 600rpx;
    height: 800rpx;
    border-radius: 20rpx;
    margin-top: 50rpx;
    margin-right: 60rpx;
}
.place{
    margin-top: 50rpx;
    float: right;
    text-align: right;
}
.time{
    float: right;
    text-align: right;
}

