.hmly-search {
	width: 90%;
	height: auto;
    display: flex;
	align-items: center;
	margin: 0rpx auto;
}

.hmly-search-left {
	margin-top: 10rpx;
	flex: 4;
	background-color: rgb(230, 230, 230);
	display: flex;
	justify-content: flex-start;
	align-items: center;
	padding: 10rpx 20rpx;
	border-radius: 30rpx;
}

.hmly-search input {
	width: 90%;
	height: 100%;
	font-size: 28rpx;
	margin-left: 20rpx;
}

.hmly-search-right {
	padding: 10rpx 30rpx;
	border-radius: 15rpx;
	flex: 0.5;
	font-size: 28rpx;
	color: #ffffff;
	background-color: #3399ff;
	text-align: center;
	margin-top: 10rpx;
	margin-left: 30rpx;
}
.icon-search:before {
	background-image: "/miniprogram-bounce/static/searchicon.png";
}
/* 
  ======== 
  搜索历史和热门搜索部分css 
  ========
*/
.hmly-title {
	width: 100%;
	height: 50rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	box-sizing: border-box;
}

.hmly-title-text {
	color: #000;
	font-weight: 700;
}

.hmly-history {
	width: 90%;
	height: auto;
	margin: 0rpx auto;
	margin-top: 30rpx;
}

.hmly-history-content {
	width: 100%;
	height: auto;
	margin-top: 30rpx;
	display: flex;
	flex-wrap: wrap;
	align-items: center;
	font-size: 20rpx;
}

.hmly-content-item {
	font-size: 28rpx;
	text-align: center;
	padding: 10rpx 20rpx;
	margin: 0 20rpx 20rpx 0;
	border-radius: 25rpx;
}

.hmly-hot {
	width: 90%;
	height: auto;
	margin: 0rpx auto;
	margin-top: 80rpx;
}

.hmly-hot-content {
	width: 100%;
	height: auto;
	margin-top: 30rpx;
}

.hmly-hot-items {
	flex: 1;
	width: 100%;
	height: 40rpx;
	font-size: 30rpx;
	align-items: center;
	margin-bottom: 20rpx;
	display: -webkit-box;
	overflow: hidden;
	-webkit-transform-origin-:vertical;
	-webkit-line-clamp: 1;
}

.hmly-item-left {
	display: flex;
	justify-content: flex-start;
	font-size: 28rpx;
}

.hmly-item-title {
	margin-left: 40rpx;
}